<h2 class="head">新規登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <table class="user_info user-form">
    <thead>
      <th></th>
      <th></th>
      <th></th>
    </thead>
    <tbody class="user-body">

      <tr>
        <td class="user-td"><%= f.label :name,"名前"%><i class="fas fa-glass-martini-alt"></i></td>
        <td class="user-td"><%= f.text_field :name, autofocus: true %></td>
      </tr>

      <tr>
        <td class="user-td"><%= f.label :email, "メールアドレス" %><i class="fas fa-wine-glass-alt"></i></td>
        <td class="user-td",colspan="2"><%= f.email_field :email, autocomplete: "email" %></td>
      </tr>

      <tr>
        <td class="user-td"><%= f.label :password, "パスワード(#{@minimum_password_length}文字以上)" %><i class="fas fa-glass-whiskey"></i></td>
        <td class="user-td",colspan="2"><%= f.password_field :password, autocomplete: "new-password" %></td>
      </tr>

      <tr>
        <td class="user-td"><%= f.label :password_confirmation, "パスワード(確認用)" %><i class="fas fa-wine-bottle"></i></td>
        <td class="user-td",colspan="2"><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
      </tr>

      <tr>
        <td></td>
        <td class="user-td",colspan="2"><%= f.submit "新規登録", class: "btn btn-success" %></td>
      </tr>
    </tbody>
  </table>
<% end %>

<h2 class="section-ttl">既に登録済みの方</h2>
  <p><%= link_to "こちら", new_user_session_path, class: "underline" %>からログインしてください。</p>
</section>