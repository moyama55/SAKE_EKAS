<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>ユーザーインフォ</h2>
      <%= render 'info', user: @user, users: @users%>
      <h2 class="mt-3">新規投稿</h2>
      <%= render 'alchools/form', alchool: @alchool %>
    </div>
    <div class='col-md-6 offset-md-1'>
      <h2>投稿したお酒たち</h2>
      <%= render 'alchools/index',alchools: @alchools%>
    </div>
    <div clas='col-md-3'>
    <table class='table table-hover table-inverse'>
      <h2>ランキング</h2>
      <thead>
        <tr>
          <th>ランキング</th>
          <th>タイトル</th>
        </tr>
      </thead>
    <tbody>
      <%= @all_ranks.each.with_index(1) do |alchool,i| %>
      <tr>
        <td>第<%= i %>位</td>
        <td><%=alchool.title%></td>
        <% end %>
      </tr>
    </tbody>
    </table>
    </div>
  </div>
</div>