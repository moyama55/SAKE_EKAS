<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>ユーザーインフォ</h2>
      <%= render 'users/info', user: @alchool.user %>
      <h2 class="mt-3">投稿</h2>
      <%= render 'form', alchool: @alchool %>
    </div>
    <div class='col-md-6 offset-md-1'>
  		<h2>投稿詳細</h2>
  		<table class='table'>
  		  <tr>
  		    <td><%= link_to user_path(@alchool.user) do %>
            <%= attachment_image_tag(@alchool.user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg") %><br>
            <%= @alchool.user.name %>
            <% end %>
          </td>
          <td><%= link_to @alchool.title, alchools_path(@alchool) %></td>
          <td><%= @alchool.body %></td>
          <td><%= link_to 'Edit', edit_alchool_path(@alchool), class: "btn btn-sm btn-success edit_alchool_#{@alchool.id}" %></td>
          <td><%= link_to 'Destroy', alchool_path(@alchool), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_alchool_#{@alchool.id}"%></td>
        </tr>
      </table>
            <table>
              <tr>
              <%= form_with(model:[@alchool, @alcool_comment], local: true) do |f| %>
              <%= f.text_area :comment, rows:'5',placeholder: "コメントをここに" %>
              <%= f.submit "送信" %>
              <% end %>
              <% @alcool_comments.each do |alcool_comment| %>
              <td><%= attachment_image_tag(alcool_comment.user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg") %></td>
              <td><%= alcool_comment.user.name %></td>
              <td><%= alcool_comment.comment %></td>

              <% end %>
              </tr>
            </table>
    </div>
  </div>
</div>