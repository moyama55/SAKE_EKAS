<%= form_with model:alchool,local:true do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control alchool_title' %>
  </div>
  <div class="form-group">
    <%= f.label :opinion %>
    <%= f.text_area :body, class: 'form-control alchool_body' %>
  </div>
  <div class="form-group">
    <%= f.submit class: 'btn btn-success' %>
  </div>
  <div class="form-group">
    <%= f.label :genre, 'ジャンル' %>
    <%= f.collection_check_boxes(:genre_ids,Genre.all,:id,:name) do |genre| %>
     <%= genre.label do %>
      <%= genre.check_box %>
      <%= genre.tbin/rails cext %>
     <% end %>
     <% end %>
  </div>
<% end %>
