<div class='container px-5 px-sm-0'>
  <div class='row'>
     <% if @alchool_new.errors.any? %>
      <dv id="error_explanation">
        <h3><%= @alchool_new.errors.count %>error prohibited this obj from being saved:</h3>
        <ul>
          <% @alchool_new.errors.full_messages.each do |message| %>
            <li><%= message %></li>
         <% end %>
        </ul>
      </div>
   <% end %>
    <div class='col-md-3'>
      <h2>ユーザーインフォ</h2>
      <%= render 'users/info', user: current_user %>
      <h2 class="mt-3">新規投稿</h2>
      <%= render 'form', alchool: @alchool_new %>
    </div>
    <div class='col-md-6 offset-md-1'>
      <h2>alchools</h2>
      <%= render 'index', alchools: @alchools,alchool: @alchool%>
    </div>
    <div clas='col-md-3'>
    <table class='table table-hover table-inverse'>
      <h2>ランキング</h2>
      <thead>
        <tr>
          <th>ランキング</th>
          <th>タイトル</th>
        </tr>
      </thead>
    <tbody>
      <%= @all_ranks.each.with_index(1) do |alchool,i| %>
      <tr>
        <td>第<%= i %>位</td>
        <td><%=alchool.title%></td>
        <% end %>
      </tr>
    </tbody>
    </table>
    </div>
</div>
